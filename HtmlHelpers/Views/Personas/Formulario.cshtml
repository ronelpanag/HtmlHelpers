@model Persona;
@{
    ViewData["Title"] = "Formulario";
}

<div class="container">

<div class="jumbotron">
    <h2>Formulario</h2>
    <hr />

    <form asp-controller="Personas" asp-action="Formulario" method="post">
        <div class="form-group">
            <label asp-for="Cedula"></label>
            <input asp-for="Cedula" class="form-control" />
            <span asp-validation-for="Cedula" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Apellido"></label>
            <input asp-for="Apellido" class="form-control" />
            <span asp-validation-for="Apellido" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Edad"></label>
            <input asp-for="Edad" class="form-control" />
            <span asp-validation-for="Edad" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Genero"></label>
            <select asp-for="Genero">
                <option>Masculino</option>
                <option>Femenino</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="CorreoElectronico">e-mail</label>
            <input asp-for="CorreoElectronico" class="form-control" />
            <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Telefono"></label>
            <input asp-for="Telefono" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="EstadoCivil">Estado civil</label>
            @Html.RadioButtonFor(x => x.EstadoCivil, "Soltero") Soltero
            @Html.RadioButtonFor(x => x.EstadoCivil, "Casado") Casado
            @Html.RadioButtonFor(x => x.EstadoCivil, "Viudo") Viudo
            @Html.RadioButtonFor(x => x.EstadoCivil, "Union libre") Union libre
        </div>

        <div class="form-group">
            <label>Hobby</label>
            @Html.CheckBoxFor(x => x.Hobby1) Musica
            @Html.CheckBoxFor(x => x.Hobby2) Tecnologia
            @Html.CheckBoxFor(x => x.Hobby3) Deportes
            @Html.CheckBoxFor(x => x.Hobby4) Farandula

        </div>

        <input type="submit" class="btn btn-primary"/>
    </form>
</div>
</div>


